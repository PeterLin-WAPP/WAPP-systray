{
  "name": "reserveux-cpconly",
  "version": "1.0.0",
  "description": "Cloud PC loading experience with sophisticated animations",
  "main": "dist/main.js",
  "homepage": "https://github.com/PeterLin-WAPP/WAPP-systray/tree/reserveux-cpconly",
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterLin-WAPP/WAPP-systray.git"
  },
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"npm run start:main\"",
    "start:main": "tsc -p tsconfig.main.json && cross-env NODE_ENV=development electron .",
    "start:renderer": "webpack serve --mode development",
    "build": "webpack --mode production && tsc -p tsconfig.main.json",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "pack": "npm run build && electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "react",
    "cloud-pc",
    "animation",
    "loading-sequence",
    "desktop-app",
    "ux",
    "ui"
  ],
  "author": "ReserveUX Team",
  "license": "MIT",
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "build": {
    "appId": "com.reserveux.cpconly",
    "productName": "ReserveUX Cloud PC",
    "directories": {
      "output": "dist-installer"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.6.4",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "util": "^0.12.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
